<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFF"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="8dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F1F1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_footTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Total:"
            android:textColor="@color/gray_btn_bg_pressed_color" />

        <TextView
            android:id="@+id/tv_layout_order_item_foot_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_footTv"
            android:text="$9.88"
            android:textColor="@color/colorred" />

        <TextView
            android:id="@+id/tv_layout_order_item_foot_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/tv_layout_order_item_foot_total_price"
            android:layout_toRightOf="@+id/tv_layout_order_item_foot_total_price"
            android:text="Normal"
            android:textColor="@color/gray_btn_bg_pressed_color" />

        <TextView
            android:id="@+id/tv_layout_order_item_foot_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Detail"
            android:textColor="@color/colorBlue" />

    </RelativeLayout>

</LinearLayout>
