        <!--android:layout_alignParentStart="true" />-->

    <TextView
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_login_tip"
        android:textSize="48sp"
        android:textColor="#47a3de"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="My Friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login_tip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="36sp"
        android:textColor="#47a3de"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/icon_facebook_btn"
        android:id="@+id/btn_login_facebook" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/icon_login_or"
        android:id="@+id/tv_login_line" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/edt_login_username"
        android:layout_alignRight="@+id/edt_login_username"
        android:layout_alignEnd="@+id/edt_login_username"
        android:layout_marginTop="8dp"
        android:hint="Enter your Password"
        android:paddingLeft="5dp"
        android:background="@drawable/shape_rec_999"
        android:id="@+id/edt_login_password"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/icon_login_pwd"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/edt_login_password"
        android:layout_alignLeft="@+id/imageView"
        android:padding="5dp"
        android:background="@drawable/shape_rec_999"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/icon_login_user"
        android:id="@+id/imageView"
        android:layout_above="@+id/edt_login_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:background="@drawable/shape_rec_999"
        />

    <CheckBox
        android:text="Remember password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/che_login_remember"
        android:layout_below="@+id/edt_login_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_login_username"
        android:hint="Enter your User Name"
        android:layout_below="@+id/tv_login_line"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/imageView"
        android:background="@drawable/shape_rec_999"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_longin_loginbtn"
        android:id="@+id/btn_login_admin"
        android:layout_below="@+id/che_login_remember"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Create my Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login_admin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#47a3df"
        android:id="@+id/textView4" />
</RelativeLayout>
