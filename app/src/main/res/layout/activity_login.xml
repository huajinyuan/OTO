    <TextView
        android:id="@+id/tv_login_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Welcome"
        android:textColor="#47a3de"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_login_tip"
        android:text="My Friend"
        android:textColor="#47a3de"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn_login_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/icon_facebook_btn" />

    <EditText
        android:id="@+id/edt_login_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/edt_login_username"
        android:layout_alignRight="@+id/edt_login_username"
        android:layout_below="@+id/edt_login_username"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:background="@drawable/shape_rec_999"
        android:ems="10"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:paddingLeft="5dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/edt_login_password"
        android:layout_alignLeft="@+id/imageView"
        android:background="@drawable/shape_rec_999"
        android:padding="5dp"
        app:srcCompat="@mipmap/icon_login_pwd" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/edt_login_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape_rec_999"
        android:padding="5dp"
        app:srcCompat="@mipmap/icon_login_user" />

    <CheckBox
        android:id="@+id/che_login_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edt_login_password"
        android:layout_marginTop="26dp"
        android:text="Remember password" />

    <EditText
        android:id="@+id/edt_login_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rel_login_line"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:background="@drawable/shape_rec_999"
        android:ems="10"
        android:hint="Enter your User Name"
        android:inputType="textPersonName"
        android:paddingLeft="5dp" />

    <Button
        android:id="@+id/btn_login_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/che_login_remember"
        android:layout_marginTop="18dp"
        android:background="@mipmap/icon_longin_loginbtn" />

    <TextView
        android:id="@+id/tv_login_go2register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login_admin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create my Account"
        android:textColor="#47a3df"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rel_login_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_login_facebook"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_dash_line"
        android:layerType="software">

        <TextView
            android:id="@+id/tv_login_line"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="21dp"
            android:background="#FFF"
            android:gravity="center"
            android:text="or" />

    </RelativeLayout>


</RelativeLayout>
