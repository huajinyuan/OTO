<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.gtgs.base.OTO.activity.Address.AddressManageActivity">

    <include
        android:id="@+id/layout_address_manage_top"
        layout="@layout/layout_com_topbar" />


    <Button
        android:id="@+id/btn_address_manage_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@color/colorBlue"
        android:textAllCaps="false"
        android:text="Add New Address"
        android:textColor="@color/colorwhite" />

    <cn.gtgs.base.OTO.widget.MyRecycle.NRecyclerView
        android:id="@+id/nrec_address_manage_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_address_manage_add"
        android:layout_below="@+id/layout_address_manage_top" />
</RelativeLayout>
