<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_buy_size_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Size"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_tip_sp_18" />

    <cn.gtgs.base.OTO.widget.LineBreakLayout
        android:id="@+id/linebreaklayout_buy_size_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myapp:leftAndRightSpace="5dip"
        myapp:rowSpace="5dip" />

    <TextView
        android:id="@+id/tv_buy_color_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Color"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_tip_sp_18" />
    <cn.gtgs.base.OTO.widget.LineBreakLayout
        android:id="@+id/linebreaklayout_buy_color_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myapp:leftAndRightSpace="5dip"
        myapp:rowSpace="5dip" />
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rec_buy_color_choose"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
</LinearLayout>